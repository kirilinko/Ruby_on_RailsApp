 
 	<% content_for(:html_title) { 'Connexion' } %>
    <%= stylesheet_link_tag'https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' %>  
 
  
  
<div class="container">
	<h2>Enrégistrer une opération</h2>
	<p><i class="fa fa-money" aria-hidden="true"></i> Gestion des entrées et dépenses </p> <hr/>
	<div class="mb-4">
	   <h4><i class="fa fa-exchange" aria-hidden="true"></i> Enregistré une opération </h4>
    </div>
    
    <%= form_with model: @operation do |form| %>
        
      <div class="row mb-4">
     
        <div class="row">
    	<div class="col-3">
    		 <i class="fa fa-usd" aria-hidden="true"></i> <%= form.label :montant %><br>
             <%= form.text_field :montant, class:"form-control" %>
    	</div>
    

    	<div class="col-3">
    		  <span><i class="fa fa-calendar" aria-hidden="true"></i> Date opération</span><br>
              <%= form.date_field :ladate ,  max:Date.today, class:"form-control" %>
    	</div>

    	<div class="col-3">
              <span><i class="fa fa-tags" aria-hidden="true"></i> Type opération</span><br>
    		  <select class="form-select" name="operation[type_operation]">
    		  	<option value="Entrer">Entré</option>
    		  	<option value="Sortit">Sortie</option>
    		  </select>
    	</div>

       </div>
<div class="row">

      <div class="col-3">
    		 <i class="fa fa-commenting" aria-hidden="true"></i> <%= form.label :motif %><br>
              <%= form.text_area :motif , class:"form-control" %>
    	</div>
    	
     <%= hidden_field_tag 'operation[utilisateur_id]', session[:id_session]  %>
</div>
     </div>
    	 <span style="margin-left: 25%;">
 <%= form.submit "Ajouter l'opération" ,class: "btn btn-success" %>
 <%= link_to "Afficher la liste des opérations", utilisateurs_profil_path, class:"nav-link" %>  
 
    	</span>

     <% end %>
     
    <% if message %>
              <br/><br/><span class="alert alert-danger"><%= message %></span>
         <% end %>
   
     
</div>

       
<%= javascript_include_tag "https://kit.fontawesome.com/42d5adcbca.js" %>
