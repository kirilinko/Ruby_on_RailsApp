  
 	<% content_for(:html_title) { 'Connexion' } %>
    <%= stylesheet_link_tag'https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' %>  
  
<div class="container">
	<h3><i class="fa fa-money" aria-hidden="true"></i> Gestion des entrées et dépenses </h3> <hr/>
	<div class="mb-4">
	   <h4><i class="fa fa-sign-in" aria-hidden="true"></i> Connexion </h4>
    </div>
    
    <%= form_with url: "/utilisateurs/index", model: @utilisateur do |form| %>
        
      <div class="row mb-4">
    	<div class="col-3">
    		 <i class="fa fa-key" aria-hidden="true"></i> <%= form.label :identifiant %><br>
             <%= form.text_field :identifiant, class:"form-control" %>
    	</div>
   
    
    	<div class="col-3">
    		  <span><i class="fa fa-unlock-alt" aria-hidden="true"></i> Mot de passe</span><br>
              <%= form.password_field :motdepasse , class:"form-control" %>
    	</div>

    	

     </div>
    	 <span style="margin-left: 25%;">
    		<%= form.submit "Se connectez" ,class: "btn btn-success" %>
    	</span>

     <% end %>
    <span style="display:flex;position: right;">
    
    <a href="/utilisateurs/inscription" class="nav-link ">
    	<i class="fa fa-user-plus" aria-hidden="true"></i>  Vous n'avez pas de compte, inscrivez vous</a>
    </span></div><br/><br/>
     <center>   
        <% if message %>
   <span class="alert alert-success"><%= message %></span>
         <% end %>

       <% if danger %>
   <span class="alert alert-danger"><%= danger %></span>
         <% end %>
    </center>
</div>
<%= javascript_include_tag "https://kit.fontawesome.com/42d5adcbca.js" %>
