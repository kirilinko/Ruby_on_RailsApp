<%= stylesheet_link_tag'https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' %>  
<div class="container">
<h1>
<i class="fa fa-user-circle" aria-hidden="true"></i>
 <%= @utilisateur.nom %> (Solde: <%= @solde %> F) 
</h1> 
<a href="<%=utilisateur_deconnexion_path%>" class="btn btn-danger" data-confirm="Voulez vous déconnecter ?" data-method="POST"> Deconnexion</a>
<h4><i class="fa fa-money" aria-hidden="true"></i> Gestion des entrées et des dépenses</h4> <hr/>
<div class="row mb-4">
 
    <div class="col-3">
     <b>
      <i class="fa fa-level-up" aria-hidden="true"></i> <i class="fa fa-usd" aria-hidden="true"></i> Total entrer</b> :
    </div>   
    <div class="col-3">
     <%= @utilisateur.ttenter %> F
    </div>   
     
     <div class="col-3">
     <b><i class="fa fa-level-down" aria-hidden="true"></i><i class="fa fa-usd" aria-hidden="true"></i> Total dépense </b>:
    </div>   
    <div class="col-3">
     <%= @utilisateur.ttsortit %> F
    </div> 
 
</div>

 <center class="mb-4">
 	<%= link_to "Enrégistrer une nouvelle opération", operations_ajouter_path, class:"btn btn-primary" %>
 </center>

<span>Historique des opérations</span> <% if message %><span class="alert alert-success"><%= message %></span>
<% end %> <hr/>


<ul>
  <% @operations.each do |operation| %>
    <li>
      <%= operation.montant %>FCFA  le <%=  operation.ladate.to_date.strftime("%d/%m/%Y")  %> - <b> <%= operation.type_operation %>|Motif</b>  : <%= operation.motif %>  
       
    </li>
    <div class="row">
    	<div class="col-2">
    		<%= link_to "Modifier",  operation_modifier_path(operation.id), class:"nav-link", style:"color:green" %>
    	</div>
    	<div class="col-3">
    		<a href="<%= operation_path(operation.id) %>" class="nav-link" data-confirm="Voulez vous supprimer cette opération ?" data-method="DELETE" style="color:red"><i class="fa fa-trash" aria-hidden="true"></i> Supprimer</a>
    	</div>
   </div>	
  <% end %>
</ul>


</div>

<%= javascript_include_tag "https://kit.fontawesome.com/42d5adcbca.js" %>
